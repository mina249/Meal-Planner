<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF">

    <ImageView
        android:id="@+id/iv_ingrediant"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038"
        app:srcCompat="@drawable/log" />

    <TextView
        android:id="@+id/tv_ingrediant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#A4FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ingridiant_quantity"
        app:layout_constraintEnd_toStartOf="@+id/tv_ingridiant_quantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_ingridiant_quantity" />

    <TextView
        android:id="@+id/tv_ingridiant_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#A4FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ingrediant"
        app:layout_constraintEnd_toStartOf="@+id/iv_ingrediant"
        app:layout_constraintHorizontal_bias="0.715"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_ingrediant" />
</androidx.constraintlayout.widget.ConstraintLayout>